#!/usr/bin/env xdg-open
[Desktop Entry]
Name=Install Shortix
Exec=rm -rf /tmp/shortix && git clone https://github.com/Jannomag/shortix /tmp/shortix && mkdir -p $HOME/.local/share/icons && cp /tmp/shortix/shortix_icon.svg $HOME/.local/share/icons && /bin/bash /tmp/shortix/shortix_install.sh
Terminal=True
Type=Application
Icon=shortix_icon.svg
StartupNotify=False
